<!DOCTYPE html>
<html>
  <head>
    <title>Article</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
  
      <%= render 'layouts/messages' %>
      <%= yield %>
      <br/>
      <% if logged_in?%>
     <p>  <%= link_to current_user.username, user_path(current_user), class: "text-info"%>  <%="(Admin)" if current_user.admin? %></p>
      
       <%= link_to "Users", users_path, class: "text-info" %>
      <br/>
      <%= link_to "Logout", logout_path, class: "text-info", method: :delete %>
      <% else%>
       <%= link_to "Login", login_path, class: "text-info" %>
       or
        <%= link_to "Sign-Up", signup_path, class: "text-info" %>
       <% end%>

       
      
  
    
  </body>
</html>
