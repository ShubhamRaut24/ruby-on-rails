  <div class="container">

  <div class="row justify-content-center">
      <div class="col-10">

      <%= render 'shared/errors', obj: @user %>
      
        <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |u| %>
          <div class="form-group row">
            <%= u.label :username, class: "col-2 col-form-label text-light" %>
            <div class="col-10">
              <%= u.text_field :username, class: "form-control shadow rounded", placeholder: "Enter valid username" %>
            </div>
          </div>

          <div class="form-group row">
            <%= u.label :email, class: "col-2 col-form-label text-light" %>
            <div class="col-10"> 
              <%= u.email_field :email, rows: 10, class: "form-control shadow rounded", placeholder: "Enter Email id" %>
            </div>
          </div>
           <div class="form-group row">
            <%= u.label :password, class: "col-2 col-form-label text-light" %>
            <div class="col-10"> 
              <%= u.password_field :password, rows: 10, class: "form-control shadow rounded", placeholder: "Enter valid password" %>
            </div>
          </div>
            <div class="form-group row justify-content-center">
            <%= u.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-outline-light btn-lg") %>
          </div>
        <% end %>
      </div>
      <div class="mb-3">
      <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info" %>
    </div>
    </div>
  </div>