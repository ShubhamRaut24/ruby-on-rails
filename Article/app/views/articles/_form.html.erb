 

      <%= render 'shared/errors', obj: @article %>
      
        <%= form_with(model: @article, local: true) do |f| %>
           
            <%= f.label :title  %><br/>
            <%= f.text_field :title, placeholder: "Title of article" %> <br/><br/>
           

          
            <%= f.label :description%><br/>
            <%= f.text_area :description, placeholder: "Description of article" %><br/>

            <%= f.label :category%><br/>
           <%= f.collection_select(:category_ids, Category.all, :id, :name,
           { prompt: "Make your selection from below list"}, { multiple: true, size: 4}) %><br/><br/>
             
            <%= f.submit  %><br/>
         
        <% end %>
        <br/>
      
       
    
  