 

      <%= render 'shared/errors', obj: @user %>
      
        <%= form_with(model: @user, local: true) do |f| %>
           
            <%= f.label :"username:"  %><br/>
            <%= f.text_field :username, placeholder: "enter valid username" %> <br/><br/>
           

            <%= f.label :"email:" %><br/>
            <%= f.email_field :email, placeholder: "Description of article" %><br/><br/>

            <%= f.label :"password:"  %><br/>
            <%= f.password_field :password, placeholder: "enter valid password" %> <br/><br/>
             
            <%= f.submit(@user.new_record? ? "Sign up" : "Update account") %>
         
        <% end %>
        <br/>
      
       